<config xmlns="http://tail-f.com/ns/config/1.0">

<?save-context SITE?>
<?set-context-node {vnf-deployment[tenant=$TENANT-NAME][deployment-name=$DEPLOYMENT-NAME}?>
<?save-context SERVICE?>
<?set-context-node {device[name=$DEVICE-NAME]}?>
<?save-context DEVICE?>

<?switch-context SERVICE?>
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{manager}</name>
      <config>
      <devices xmlns="http://tail-f.com/ned/cisco-fmc">
      <devicerecords>
        <name>{name}</name>
        <hostName>{networks/network['Management']/ip-address</hostName>
        <regKey>0123456789</regKey>
        <license_caps>BASE</license_caps>
        <license_caps>MALWARE</license_caps>
        <license_caps>THREAT</license_caps>
        <license_caps>URLFilter</license_caps>
        <physicalinterfaces>
          <name>Diagnostic0/0</name>
          <ifname>diagnostic</ifname>
          <enabled>true</enabled>
          <mode>NONE</mode>
          <MTU>1500</MTU>
        </physicalinterfaces>
        <physicalinterfaces>
          <name>GigabitEthernet0/0</name>
          <ifname>outside</ifname>
          <enabled>true</enabled>
          <mode>NONE</mode>
          <MTU>1500</MTU>
          <ipv4>
            <static>
              <?switch-context DEVICE?>
              <address>{networks/network['Outside']/ip-address</address>
              <?switch-context SITE?>
              <netmask>{networks/network['Outside']/netmask}</netmask>
            </static>
          </ipv4>
        </physicalinterfaces>
        <physicalinterfaces>
          <name>GigabitEthernet0/1</name>
          <ifname>Inside</ifname>
          <enabled>true</enabled>
          <mode>NONE</mode>
          <MTU>1500</MTU>
          <ipv4>
            <static>
              <?switch-context DEVICE?>
              <address>{networks/network['Inside']/ip-address</address>
              <?switch-context SITE?>
              <netmask>{networks/network['Inside']/netmask}</netmask>
            </static>
          </ipv4>
        </physicalinterfaces>
      </devicerecords>
      </devices>
      </config>
  </device>
  </devices>
</config>

<config-template xmlns="http://tail-f.com/ns/config/1.0">
<!--                 servicepoint="esc-ftd-deployment-servicepoint" -->
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>ESC</name>
      <config>
      <esc_datamodel xmlns="http://www.cisco.com/esc/esc">
      <tenants>
      <tenant>
        <name>admin</name>
          <deployments>
          <deployment>
            <name>{$DEPLOYMENT-NAME}</name>
            <locators>
              <datacenter>{$DATACENTER-NAME}</datacenter>
            </locators>
            <vm_group>
              <name>FTD-{$DEPLOYMENT-NAME}</name>
              <image>Templates/{$IMAGE-NAME}</image>
              <bootup_time>900</bootup_time>
              <volumes>
                <volume>
                  <name>{$DATASTORE-NAME}</name>
                  <volid>1</volid>
                </volume>
              </volumes>
              <interfaces>
                <interface>
                  <nicid>1</nicid>
                  <network>{$MANAGEMENT-NETWORK-NAME}</network>
                  <ip_address>{$MANAGEMENT-NETWORK-IP-ADDRESS}</ip_address>
                </interface>
              </interfaces>
              <kpi_data>
                <kpi>
                  <event_name>VM_ALIVE</event_name>
                  <metric_value>1</metric_value>
                  <metric_cond>GT</metric_cond>
                  <metric_type>UINT32</metric_type>
                  <metric_occurrences_true>2</metric_occurrences_true>
                  <metric_occurrences_false>2</metric_occurrences_false>
                  <metric_collector>
                    <type>ICMPPING</type>
                    <nicid>1</nicid>
                    <poll_frequency>5</poll_frequency>
                    <polling_unit>seconds</polling_unit>
                    <continuous_alarm>false</continuous_alarm>
                  </metric_collector>
                </kpi>
              </kpi_data>
              <rules>
                <admin_rules>
                  <rule>
                    <event_name>VM_ALIVE</event_name>
                    <action>FALSE RECOVER AUTOHEALING</action>
                    <action>TRUE SERVICEBOOTED.SH</action>
                  </rule>
                </admin_rules>
              </rules>
              <!-- scaling>
                <min_active>1</min_active>
                <max_active>1</max_active>
                <elastic>true</elastic>
                <static_ip_address_pool>
                  <network>{$MANAGEMENT-NETWORK-NAME}</network>
                  <ip_address>{ip-address}</ip_address>
                </static_ip_address_pool>
              </scaling -->
              <placement>
                <type>zone_host</type>
                <zone>{$CLUSTER-NAME}</zone>
              </placement>
              <recovery_policy>
                <action_on_recovery>REBOOT_THEN_REDEPLOY</action_on_recovery>
              </recovery_policy>
              <config_data>
                <configuration>
                  <dst>ovfProperty:pw</dst>
                  <data>{$DEPLOY-PASSWORD}</data>
                </configuration>
                <configuration>
                  <dst>ovfProperty:fqdn</dst>
                  <data>{$DEPLOYMENT-NAME}.localdomain</data>
                </configuration>
                <configuration>
                  <dst>ovfProperty:dns1</dst>
                  <data>{$DNS-IP-ADDRESS}</data>
                </configuration>
                <configuration>
                  <dst>ovfProperty:ipv4.addr</dst>
                  <data>{$MANAGEMENT-NETWORK-IP-ADDRESS}</data>
                </configuration>
                <configuration>
                  <dst>ovfProperty:ipv4.mask</dst>
                  <data>{$MANAGEMENT-NETWORK-NETMASK}</data>
                </configuration>
                <configuration>
                  <dst>ovfProperty:ipv4.gw</dst>
                  <data>{$MANAGEMENT-NETWORK-GATEWAY-IP-ADDRESS}</data>
                </configuration>
              </config_data>
            </vm_group>
          </deployment>
          </deployments>
      </tenant>
      </tenants>
      </esc_datamodel>
      </config>
  </device>
  </devices>
</config-template>

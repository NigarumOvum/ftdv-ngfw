<config xmlns="http://tail-f.com/ns/config/1.0">
  <vnf-manager xmlns="http://example.com/ftdv-ngfw">
  <site>
    <name>{site}</name>
      <vnf-deployment>
        <tenant>{tenant}</tenant>
        <deployment-name>{deployment-name}</deployment-name>
        <catalog-vnf>{catalog-vnf}</catalog-vnf>
        <scaling>
          <scale-up-threshold>{scaling/scale-up-threshold}</scale-up-threshold>
          <scale-down-threshold>{scaling/scale-down-threshold}</scale-down-threshold>
          <mgmt-ip-pool-start-address>{scaling/mgmt-ip-pool-start-address}</mgmt-ip-pool-start-address>
          <mgmt-ip-pool-end-address>{scaling/mgmt-ip-pool-end-address}</mgmt-ip-pool-end-address>
        </scaling>
      </vnf-deployment>
  </site>
  </vnf-manager>
</config>

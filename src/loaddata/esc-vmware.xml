<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <template>
    <name>esc-vmware</name>
    <config>
      <esc_datamodel xmlns="http://www.cisco.com/esc/esc">
        <tenants>
          <tenant>
            <name>{$TENANT}</name>
            <deployments>
              <deployment>
                <name>{$DEPLOYMENT_NAME}</name>
                <locators>
                  <datacenter>{$DATACENTER_NAME}</datacenter>
                </locators>
                <vm_group>
                  <name>{$VM_GROUP_NAME}</name>
                  <!-- vim_vm_name>{$VM_GROUP_NAME}</vim_vm_name -->
                  <placement>
                    <type>zone_host</type>
                    <zone>{$CLUSTER_NAME}</zone>
                  </placement>
                  <kpi_data>
                    <!--kpi tags="delete">
                      <event_name>VM_ALIVE</event_name>
                    </kpi-->
                    <kpi>
                      <event_name>VM_ALIVE</event_name>
                      <metric_value>0</metric_value>
                      <metric_cond>EQ</metric_cond>
                      <metric_type>UINT32</metric_type>
                      <!-- metric_occurrences_true>1</metric_occurrences_true>
                      <metric_occurrences_false>5</metric_occurrences_false -->
                      <metric_collector>
                        <type>FTD_API_PING</type>
                        <nicid>1</nicid>
                        <poll_frequency>15</poll_frequency>
                        <polling_unit>seconds</polling_unit>
                        <continuous_alarm>false</continuous_alarm>
                      </metric_collector>
                    </kpi>
                  </kpi_data>
                  <rules>
                    <admin_rules>
                      <!-- rule tags="delete">
                        <event_name>VM_ALIVE</event_name>
                      </rule -->
                      <rule>
                        <event_name>VM_ALIVE</event_name>
                        <action>ALWAYS log</action>
                        <action tags="delete">FALSE recover autohealing</action>
                        <action>TRUE servicebooted.sh</action>
                      </rule>
                    </admin_rules>
                  </rules>
                    <config_data>
                    <configuration>
                      <dst>ovfProperty:pw</dst>
                      <data>{$VNF_PASSWORD}</data>
                    </configuration>
                    <configuration>
                      <dst>ovfProperty:fqdn</dst>
                      <data>{$DEPLOYMENT_NAME}.localdomain</data>
                    </configuration>
                    <configuration>
                      <dst>ovfProperty:dns1</dst>
                      <data>{$DNS_SERVER_IP}</data>
                    </configuration>
                    <configuration>
                      <dst>ovfProperty:ipv4.addr</dst>
                      <data>$NICID_1_IP_ADDRESS</data>
                    </configuration>
                    <configuration>
                      <dst>ovfProperty:ipv4.mask</dst>
                      <data>{$MGMT_IP_NETMASK}</data>
                    </configuration>
                    <configuration>
                      <dst>ovfProperty:ipv4.gw</dst>
                      <data>{$GATEWAY_IP_ADDRESS}</data>
                    </configuration>
                  </config_data>
                  <!-- interfaces>
                    <interface>
                      <nicid>1</nicid>
                      <network>{$MGMT_NETWORK_NAME}</network>
                      <ip_address>{$MGMT_IP_ADDRESS}</ip_address>
                    </interface>
                  </interfaces -->
                  <flavor tags="delete" />
                </vm_group>
              </deployment>
            </deployments>
          </tenant>
        </tenants>
      </esc_datamodel>
    </config>
  </template>
  </devices>
</config>